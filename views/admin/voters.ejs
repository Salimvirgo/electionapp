<div class="modal fade" role="dialog" tabindex="-1" id="addModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: rgb(255,102,0);">
                <h4 class="modal-title" style="color: #f7f9fc;">Add Voter</h4><button type="button" class="close"
                    data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form action="/admin/voters" method="POST">
                    <div class="form-group">
                        <label for="voters_name">Voter's Name</label>
                        <input type="text" name="voters_name" id="voters_name" class="form-control"
                            placeholder="Enter fullname " aria-describedby="" required>
                        <small id="" class="text-muted"></small>
                    </div>

                    <div class="form-group">
                        <label for="voter_sex">Sex</label>
                        <select class="form-control" name="voter_sex" id="voter_sex" required>
                            <option selected>Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="voter_department">Departments</label>
                        <select class="form-control" name="voter_department" id="voter_department" required>
                            <option selected> Select Department</option>
                            <% if (typeof allDepartments !='undefined' ) { %>
                                <% allDepartments.forEach(d=> { %>
                                    <option value="<%- d.department_id %>">
                                        <%= d.department_name %>
                                    </option>
                                    <% }) %>
                                        <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="voter_location">Location</label>
                        <select class="form-control" name="voter_location" id="voter_location" required>
                            <option selected>Select Location</option>
                            <% if (typeof allLocations !='undefined' ) { %>
                                <% allLocations.forEach(l=> { %>
                                    <option value="<%- l.location_id %>">
                                        <%= l.location_name %>
                                    </option>
                                    <% }) %>
                                        <% } %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info btn-block">Save</button>
                </form>
            </div>
        </div>
    </div>
